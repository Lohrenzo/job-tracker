extends default

block content
    div(class="flex min-h-screen w-full flex-col justify-center px-6")
      div(class="sm:mx-auto sm:w-full sm:max-w-sm")
        h2(class="mt-6 capitalize text-center text-2xl/9 font-bold tracking-tight text-gray-300") New Job application

      div(class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm")
        if(message)
          h4.text-red-500 #{message}
        form(class="space-y-6" action="/my-applications/new" method="POST" enctype="multipart/form-data")
          div
            label(for="companyName" class="block text-sm/6 font-medium text-gray-400") Company Name
            div.mt-2
              input(type="text" name="companyName" id="companyName" autocomplete="companyName" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div
            label(for="role" class="block text-sm/6 font-medium text-gray-400") Role
            div.mt-2
              input(type="text" name="role" id="role" autocomplete="role" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div
            label(for="description" class="block text-sm/6 font-medium text-gray-400") Description
            div.mt-2
              textarea(name="description" id="description" autocomplete="description" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div
            label(for="location" class="block text-sm/6 font-medium text-gray-400") Location
            div.mt-2
              input(type="text" name="location" id="location" autocomplete="location" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div
            label(for="amount" class="block text-sm/6 font-medium text-gray-400") Amount
            div.mt-2
              input(type="text" name="amount" id="amount" autocomplete="amount" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div
            label(for="timeScale" class="block text-sm/6 font-medium text-gray-400") Time Scale            
            div.mt-2
              select(name="timeScale" autocomplete="timeScale" id="timeScale" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")
                option(value="Yearly") Yearly
                option(value="Monthly") Monthly
                option(value="Forthnightly") Forthnightly
                option(value="Weekly") Weekly
                option(value="Hourly") Hourly
          div
            label(for="dateApplied" class="block text-sm/6 font-medium text-gray-400") Date Applied            
            div.mt-2
              input(type="date" name="dateApplied" id="dateApplied" autocomplete="dateApplied" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div
            label(for="stage" class="block text-sm/6 font-medium text-gray-400") Application Stage           
            div.mt-2
              select(name="stage" id="stage" autocomplete="stage" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")
                option(value="Applied") Applied
                option(value="Phone Screen") Phone Screen
                option(value="Test/Challenge") Test/Challenge
                option(value="Pending") Pending
                option(value="Interview") Interview
                option(value="Offer") Offer
                option(value="Hired") Hired
                option(value="Rejected") Rejected

          div
            label(for="cv" class="block text-sm/6 font-medium text-gray-400") CV           
            div.mt-2
              //- input(type="text" name="cv" id="cv" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")
              input(type="file" name="cv" id="cv" accept=".pdf, .docx" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div
            label(for="url" class="block text-sm/6 font-medium text-gray-400") URL           
            div.mt-2
              input(type="text" name="url" id="url" autocomplete="url" required class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-sky-600 sm:text-sm/6")

          div(class="mb-6")
            button(type="submit" class="flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-sky-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600") Add Job Application




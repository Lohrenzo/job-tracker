doctype html
html
    head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      meta(http-equiv='X-UA-Compatible' content='ie=edge')
      script(src="https://unpkg.com/@tailwindcss/browser@4")
      title= title
      link(rel='icon' type="image/x-icon" href='/images/favicon.ico')
      link(rel='stylesheet' type="text/css" href='/stylesheets/style.css')
      link(rel="preconnect" href="https://fonts.googleapis.com")
      link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
      link(href="https://fonts.googleapis.com/css2?family=Cutive&family=Roboto:ital,wght@0,100..900;1,100..900&family=Sigmar&display=swap" rel="stylesheet" )   
    body(class="overflow-x-hidden h-screen w-full")
      div(class="z-[50] bg-black/90 backdrop-blur sticky top-0 left-0 text-white w-full flex items-center justify-between p-4 border-b border-sky-900/50 shadow shadow-black/50")
        a(href="/my-applications") 
          h1 Home
        if user
          img(src=`${user.image}` height=40 width=40 alt=`Profile: ${user.username}` id="menu-button" aria-expanded="true" aria-haspopup="true" class="cursor-pointer rounded-full h-[30px] w-[30px] object-fill")
          div(id="dropdown" class="capitalize font-bold absolute right-1 top-12 z-10 mt-2 shadow-lg shadow-black/70 flex flex-col items-start justify-between gap-y-0 bg-white/80 text-black backdrop-blur rounded-md focus:outline-hidden hidden" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1")
            a(href="/profile" class="p-2 text-sm lowercase w-full hover:bg-black/30 rounded-t-md" role="menuitem" tabindex="-1" id="menu-item-0") @#{user.username}
            a(href="/my-applications/new" class="p-2 text-sm w-full hover:bg-black/30" role="menuitem" tabindex="-1" id="menu-item-1") New Job Application
            a(href="/logout" class="p-2 text-sm w-full hover:bg-[red]/60 rounded-b-md" role="menuitem" tabindex="-1" id="menu-item-2") Logout
        else
          a(href="/login" class="capitalize rounded-lg underline hover:no-underline") Login
      //- div(class="h-[2rem] p-6")
      section(class="p-2 grid w-full h-max overflow-hidden place-items-center")
        block content
    script(src="/javascripts/index.js")
